<h1>Create a new Artist: </h1>

<% if flash[:errors] %>
    <h2><%= flash[:errors][0] %></h2>
<% end %>

<%= form_for @artist do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :age %>
<%= f.number_field :age %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.submit %>
<% end %>